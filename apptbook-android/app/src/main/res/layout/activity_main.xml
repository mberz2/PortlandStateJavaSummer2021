<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/welcome" />

    <TextView
        android:id="@+id/gettingStarted"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:text="@string/gettingStarted" />

    <TextView
        android:id="@+id/mainCount"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="140dp" />


    <Button
        android:id="@+id/btnCreate"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="190dp"
        android:text="@string/create" />


    <TextView
        android:id="@+id/descCreate"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="200dp"
        android:text="Book a new appointment." />

    <Button
        android:id="@+id/btnView"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="250dp"
        android:text="@string/view" />

    <TextView
        android:id="@+id/descView"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="260dp"
        android:text="View all bookings." />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="310dp"
        android:text="@string/search" />

    <TextView
        android:id="@+id/descSearch"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="320dp"
        android:text="Search for specific bookings." />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="370dp"
        android:text="Help" />

    <TextView
        android:id="@+id/descHelp"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="380dp"
        android:text="Get help using the app." />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="430dp"
        android:text="Exit" />

</RelativeLayout>