<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleSearch"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/welcomeSearch" />

    <TextView
        android:id="@+id/gettingStartedSearch"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="75dp"
        android:text="@string/gettingStartedSearch" />

    <TextView
        android:id="@+id/mainCount"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="140dp" />

    <TextView
        android:id="@+id/searchByOwner"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="170dp"
        android:text="@string/searchByOwner" />

    <Spinner
        android:id="@+id/searchBooks"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginStart="28dp"
        android:layout_marginTop="190dp" />

    <TextView
        android:id="@+id/searchByDates"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="275dp"
        android:text="@string/searchByDates" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="430dp"
        android:text="Exit" />

</RelativeLayout>